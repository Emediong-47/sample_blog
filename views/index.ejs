<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>My Blog</h1>
    <a href="/new">Create New Post</a>
    <div>
        <% if (posts.length === 0) { %>
            <p>No posts yet. Create one!</p>
        <% } else { %>
            <% posts.forEach(post => { %>
                <div>
                    <h2><%= post.title %></h2>
                    <p><%= post.content %></p>
                </div>
            <% }); %>
        <% } %>
    </div>
</body>
</html>