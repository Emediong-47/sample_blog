<%- include("partials/header") %>
<div class="container">
    <header>
        <h1>My Blog</h1>
        <a href="/new" class="btn">+ Create New Post</a>
    </header>
    
    <div class="posts-container">
        <% if (posts.length === 0) { %>
            <p class="no-posts">No posts yet. <a href="/new">Create one!</a></p>
        <% } else { %>
            <% posts.forEach(post => { %>
                <div class="post-card">
                    <h2><%= post.title %></h2>
                    <p><%= post.post_details %></p>
                </div>
            <% }); %>
        <% } %>
    </div>
</div>
<%- include("partials/footer") %>